{
  "kind": "collectionType",
  "collectionName": "applications",
  "info": {
    "singularName": "application",
    "pluralName": "applications",
    "displayName": "Application",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "full_name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": false
    },
    "resume": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "applied_date": {
      "type": "date",
      "required": true
    },
    "job": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::job-posting.job-posting",
      "inversedBy": "applications"
    },
    "cover_letter": {
      "type": "text"
    },
    "email_sent": {
      "type": "boolean",
      "default": false
    }
  }
}
